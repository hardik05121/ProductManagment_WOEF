@model SupplierVM

<div class="card shadow border-0 my-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2"> @(Model.Supplier.Id != 0 ? "Update" : "Create") Supplier</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" class="row" enctype="multipart/form-data">
            <input asp-for="Supplier.Id" hidden />

            <div class="row">
                <div class="col-10">
                    <div class="border p-3">
                        @*<div asp-validation-summary="ModelOnly"></div>*@
                        <div class="form-floating py-2 col-12">
                            <input asp-for="Supplier.SupplierName" class="form-control border-0 shadow" />
                            <label asp-for="Supplier.SupplierName" class="ms-2"></label>
                            <span asp-validation-for="Supplier.SupplierName" class="text-danger"></span>
                        </div>
                        <div class="form-floating py-2 col-12">
                            <input asp-for="Supplier.ContactPerson" class="form-control border-0 shadow" />
                            <label asp-for="Supplier.ContactPerson" class="ms-2"></label>
                            <span asp-validation-for="Supplier.ContactPerson" class="text-danger"></span>
                        </div>
                        <div class="form-floating py-2 col-12">
                            <input asp-for="Supplier.Email" class="form-control border-0 shadow" />
                            <label asp-for="Supplier.Email" class="ms-2"></label>
                            <span asp-validation-for="Supplier.Email" class="text-danger"></span>
                        </div>
                        <div class="form-floating py-2 col-12">
                            <input asp-for="Supplier.WebSite" class="form-control border-0 shadow" />
                            <label asp-for="Supplier.WebSite" class="ms-2"></label>
                            <span asp-validation-for="Supplier.WebSite" class="text-danger"></span>
                        </div>
                        <div class="form-floating py-2 col-12">
                            <input asp-for="Supplier.Address" class="form-control border-0 shadow" />
                            <label asp-for="Supplier.Address" class="ms-2"></label>
                            <span asp-validation-for="Supplier.Address" class="text-danger"></span>
                        </div>
                        <div class="form-floating py-2 col-12">
                            <input asp-for="Supplier.MobileNumber" class="form-control border-0 shadow" />
                            <label asp-for="Supplier.MobileNumber" class="ms-2"></label>
                            <span asp-validation-for="Supplier.MobileNumber" class="text-danger"></span>
                        </div>
                        <div class="form-floating py-2 col-12">
                            <input asp-for="Supplier.PhoneNumber" class="form-control border-0 shadow" />
                            <label asp-for="Supplier.PhoneNumber" class="ms-2"></label>
                            <span asp-validation-for="Supplier.PhoneNumber" class="text-danger"></span>
                        </div>
 
                        <div class="form-floating py-2 col-12">
                            <select asp-for="@Model.Supplier.CountryId" id="City_CountryId" asp-items="@Model.CountryList" class="form-select border-0 shadow">
                                <option disabled selected>--Select country--</option>
                            </select>
                            <label asp-for="Supplier.CountryId" class="ms-2"></label>
                            <span asp-validation-for="Supplier.CountryId" class=" text-danger"></span>
                        </div>
                        <div class="form-floating py-2 col-12">
                            <select asp-for="@Model.Supplier.StateId" id="City_StateId" asp-items="@Model.StateList" class="form-select border-0 shadow">
                                <option disabled selected>--Select State--</option>
                            </select>
                            <label asp-for="Supplier.StateId" class="ms-2"></label>
                            <span asp-validation-for="Supplier.StateId" class="text-danger"></span>
                        </div>
                        <div class="form-floating py-2 col-12">
                            <select asp-for="@Model.Supplier.CityId" id="City_Id" asp-items="@Model.CityList" class="form-select border-0 shadow">
                                <option disabled selected>--Select City--</option>
                            </select>
                            <label asp-for="Supplier.CityId" class="ms-2"></label>
                            <span asp-validation-for="Supplier.CityId" class="text-danger"></span>
                        </div>


                        <div class="form-floating py-2 col-12">
                            <input asp-for="Supplier.BillingAddress" class="form-control border-0 shadow" />
                            <label asp-for="Supplier.BillingAddress" class="ms-2"></label>
                            <span asp-validation-for="Supplier.BillingAddress" class="text-danger"></span>
                        </div>

                        <div class="form-floating py-2 col-12">
                            <select asp-for="@Model.Supplier.BillingCountryId" id="City_CountryId" asp-items="@Model.CountryList" class="form-select border-0 shadow">
                                <option disabled selected>--Select country--</option>
                            </select>
                            <label asp-for="Supplier.BillingCountryId" class="ms-2"></label>
                            <span asp-validation-for="Supplier.BillingCountryId" class="text-danger"></span>
                        </div>
                        <div class="form-floating py-2 col-12">
                            <select asp-for="@Model.Supplier.BillingStateId" id="City_StateId" asp-items="@Model.StateList" class="form-select border-0 shadow">
                                <option disabled selected>--Select State--</option>
                            </select>
                            <label asp-for="Supplier.BillingStateId" class="ms-2"></label>
                            <span asp-validation-for="Supplier.BillingStateId" class="text-danger"></span>
                        </div>
                        <div class="form-floating py-2 col-12">
                            <select asp-for="@Model.Supplier.BillingCityId" id="City_Id" asp-items="@Model.CityList" class="form-select border-0 shadow">
                                <option disabled selected>--Select City--</option>
                            </select>
                            <label asp-for="Supplier.BillingCityId" class="ms-2"></label>
                            <span asp-validation-for="Supplier.BillingCityId" class="text-danger"></span>
                        </div>
                        <div class="form-floating py-2 col-12">
                            <input asp-for="Supplier.ShippingAddress" class="form-control border-0 shadow" />
                            <label asp-for="Supplier.ShippingAddress" class="ms-2"></label>
                            <span asp-validation-for="Supplier.ShippingAddress" class="text-danger"></span>
                        </div>
                        <div class="form-floating py-2 col-12">
                            <select asp-for="@Model.Supplier.ShippingCountryId" id="City_CountryId" asp-items="@Model.CountryList" class="form-select border-0 shadow">
                                <option disabled selected>--Select country--</option>
                            </select>
                            <label asp-for="Supplier.ShippingCountryId" class="ms-2"></label>
                            <span asp-validation-for="Supplier.ShippingCountryId" class="text-danger"></span>
                        </div>
                        <div class="form-floating py-2 col-12">
                            <select asp-for="@Model.Supplier.ShippingStateId" id="City_StateId" asp-items="@Model.StateList" class="form-select border-0 shadow">
                                <option disabled selected>--Select State--</option>
                            </select>
                            <label asp-for="Supplier.ShippingStateId" class="ms-2"></label>
                            <span asp-validation-for="Supplier.ShippingStateId" class="text-danger"></span>
                        </div>
                        <div class="form-floating py-2 col-12">
                            <select asp-for="@Model.Supplier.ShippingCityId" id="City_Id" asp-items="@Model.CityList" class="form-select border-0 shadow">
                                <option disabled selected>--Select City--</option>
                            </select>
                            <label asp-for="Supplier.ShippingCityId" class="ms-2"></label>
                            <span asp-validation-for="Supplier.ShippingCityId" class="text-danger"></span>
                        </div>
                        <div class="py-2 col-12">
                            <label asp-for="Supplier.Description" class="ms-2 text-muted"></label>
                            <textarea asp-for="Supplier.Description" class="form-control border-0 shadow"></textarea>
                        </div>
                        <div class="form-floating py-2 col-12">
                            <input type="file" name="file" class="form-control border-0 shadow" />
                            <label asp-for="Supplier.SupplierImage" class="ms-2"></label>
                        </div>

                        <div class="row pt-2">
                            <div class="col-6 col-md-3">
                                @if (Model.Supplier.Id != 0)
                                {
                                    <button type="submit" class="btn btn-primary form-control">Update</button>
                                }
                                else
                                {
                                    <button type="submit" class="btn btn-primary form-control">Create</button>
                                }
                            </div>
                            <div class="col-6 col-md-3">
                                <a asp-controller="Supplier" asp-action="Index" class="btn btn-outline-primary border  form-control">
                                    Back to List
                                </a>
                            </div>
                        </div>


                    </div>
                </div>
                <div class="col-2">
                    @if (Model.Supplier.SupplierImage != null)
                    {
                        foreach (var image in Model.Supplier.SupplierImage)
                        {
                            <div class="border p-1 m-2 text-center">
                                <img src="@image" width="100%"
                                     style="border-radius:5px; border:1px solid #bbb9b9" />
                                @*<a asp-action="DeleteImage" class="btn btn-danger" asp-route-imageId="@image.Id">
                        <i class="bi bi-trash-fill"></i> Delete
                        </a>*@
                            </div>
                        }
                    }
                </div>
            </div>

        </form>
    </div>
</div>




@section Scripts{
    <script>
        tinymce.init({
            selector: 'textarea',
            plugins: 'anchor autolink charmap codesample emoticons  lists   table visualblocks wordcount',
            toolbar: 'undo redo | blocks fontfamily fontsize | bold italic underline strikethrough |  align lineheight | numlist bullist indent outdent',
        });
    </script>
    <script>
        $(document).ready(function () {
            $("#City_CountryId").change(function () {
                var countryId = $(this).val();
                $.ajax({
                    url: '@Url.Action("GetStatesByCountry", "Supplier")',
                    // url: '/City/getCitiesByState',
                    type: 'GET',
                    //dataType: 'json'
                    data: { countryId: countryId },
                    success: function (data) {
                        $("#City_StateId").empty();
                        $("#City_StateId").append('<option disabled selected>--Select State--</option>');
                        // alert(data);
                        $.each(data, function (i, state) {
                            // alert(i);
                            $("#City_StateId").append($('<option></option>').val(state.id).text(state.stateName));
                        });
                    }
                });
            });

            $("#City_StateId").change(function () {
                var stateId = $(this).val();
                $.ajax({
                    url: '@Url.Action("GetCitiesByState", "Supplier")',
                    //  url: '/City/GetStatesByCountry',
                    type: 'GET',
                    data: { stateId: stateId },
                    success: function (data) {
                        $("#City_Id").empty();
                        $("#City_Id").append('<option disabled selected>--Select City--</option>');
                        $.each(data, function (i, city) {

                            $("#City_Id").append($('<option></option>').val(city.id).text(city.cityName));
                        });
                    }
                });
            });
        });
    </script>
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}